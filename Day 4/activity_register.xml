<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/green">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                        <EditText
                            android:id="@+id/reg_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="150dp"
                            android:background="@drawable/custom_border"
                            android:padding="12dp"
                            android:hint="User Name"
                            android:inputType="text" />


                        <EditText
                            android:id="@+id/reg_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/reg_username"
                            android:padding="12dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginHorizontal="20dp"
                            android:hint="E mail"
                            android:inputType="textEmailAddress"
                            android:background="@drawable/custom_border"/>


                        <EditText
                            android:id="@+id/reg_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_below="@id/reg_email"
                            android:padding="12dp"
                            android:hint="Mobile Number"
                            android:inputType="number"
                            android:background="@drawable/custom_border"/>

                        <EditText
                            android:id="@+id/reg_passwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_below="@id/reg_mobile"
                            android:hint="Password"
                            android:padding="12dp"
                            android:inputType="textPassword"
                            android:background="@drawable/custom_border"/>

                        <Button
                            android:id="@+id/reg_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Login"
                            android:background="@drawable/reg_btn_border"
                            android:layout_centerHorizontal="true"
                            app:backgroundTint="@null"
                            android:layout_below="@id/reg_passwd"
                            android:layout_marginTop="15dp"/>


                        <TextView
                            android:id="@+id/alreadyhaveaccount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Already have account"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/reg_btn"
                            android:textSize="30dp"
                            android:layout_marginTop="130dp"
                            android:textColor="@color/black"/>


                </RelativeLayout>


        </ScrollView>

</RelativeLayout>